{
  "manifest_version": 3,
  "name": "Cookie Companion",
  "version": "1.0",
  "description": "Tamagochi-style cookie maintainance!",
  "author": "Lauro Gianella",
  "permissions": [
    "cookies",
    "history",
    "storage",
    "tabs"
  ],
  "action": {
    "default_icon": "icons/icon.png",
    "default_popup": "popup/main/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [ "<all_urls>" ]
  
}